<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Add New Blog Page</title>
</head>
<body>
    <%- include('./partials/nav') %>
   <form action="/blog" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" aria-describedby="title">
    </div>
    <div class="mb-3">
        <label for="coverImage">Cover Image</label>
        <input  type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage" type="file" >
    </div>
    <div class="form-floating mb-3">
        <textarea type="text" class="form-control" id="body" name="body" aria-describedby="body"></textarea>
        <label for="floatingTextarea">Write Your Blog Here</label>
    </div>
   
    <div class="mb-3">
         <button class=" btn btn-primary">Submit</button>
    </div>
   </form>
    <%- include('./partials/script') %>
</body>
</html>